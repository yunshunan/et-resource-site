    "axios": "^1.4.0",
    "crypto-js": "^4.1.1",
    "dayjs": "^1.11.9",
    "echarts": "^5.4.3",
    "lodash": "^4.17.21",
    "chart.js": "^4.3.0",
    "vue-chartjs": "^4.1.1",
