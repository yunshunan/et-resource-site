{
  "name": "et-resource-site-frontend",
  "version": "1.0.0",
  "description": "Et 资源小站前端",
  "main": "index.js",
  "scripts": {
    "dev": "vue-cli-service serve",
    "build": "vue-cli-service build",
    "lint": "vue-cli-service lint",
    "clean": "node scripts/clean-hidden-files.js",
    "pretest": "node scripts/clean-hidden-files.js",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:coverage:report": "vitest run --coverage && npx serve coverage/html",
    "test:coverage:auth": "vitest run --coverage auth",
    "test:coverage:resources": "vitest run --coverage resources",
    "test:e2e": "cypress open",
    "test:e2e:headless": "cypress run",
    "test:unit": "vitest run",
    "test:unit:watch": "vitest watch",
    "test:integration": "vitest run integration",
    "test:ci": "vitest run --coverage && cypress run",
    "test:all": "npm run test:unit && npm run test:integration && npm run test:e2e:headless",
    "clean:hidden": "find ./__tests__ -name '._*' -type f -delete",
    "pretest:unit": "npm run clean:hidden",
    "pretest:coverage": "npm run clean:hidden"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "axios": "^1.6.0",
    "bootstrap": "^5.3.0",
    "bootstrap-icons": "^1.11.2",
    "pinia": "^2.1.7",
    "pinia-plugin-persistedstate": "^3.2.1",
    "sass": "^1.64.0",
    "sass-loader": "^13.3.0",
    "vue": "^3.3.0",
    "vue-router": "^4.2.0"
  },
  "devDependencies": {
    "@vitejs/plugin-vue": "^5.0.0",
    "@vitest/coverage-v8": "^0.33.0",
    "@vue/cli-plugin-babel": "~5.0.0",
    "@vue/cli-plugin-eslint": "~5.0.0",
    "@vue/cli-plugin-router": "~5.0.0",
    "@vue/cli-service": "~5.0.0",
    "@vue/test-utils": "^2.0.0",
    "cypress": "^13.0.0",
    "cypress-file-upload": "^5.0.8",
    "glob": "^11.0.1",
    "jsdom": "^23.0.0",
    "msw": "^1.3.0",
    "vitest": "^0.34.0"
  }
}
